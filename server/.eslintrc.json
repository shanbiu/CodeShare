{  
  "env": {  
    "es2021": true,  
    "node": true  
  },  
  "extends": [  
    "eslint:recommended",  
    "plugin:node/recommended",
    "plugin:prettier/recommended"  
  ],  
  "parserOptions": {  
    "ecmaVersion": 12  
  },  
  "engines": {  
    "node": ">=10.17.0"  
  },
  "plugins": [  
    "node"  
  ],  
  "rules": {  
    "prettier/prettier": "error",
    "no-useless-catch": 0,
    "no-unused-expressions": "off",
    "no-unused-vars": "off",
    "no-useless-escape":"off"
    
    // 在这里添加自定义的规则  
  
  } 
}  